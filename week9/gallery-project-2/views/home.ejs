<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Beth+Ellen&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Image Gallery \o/</title>
</head>

<body>
    <div class="slider">
        <div class="arrowbox">
            <img class="arrow inactive" src="/arrow.svg" alt="#">
        </div>
        <div class="picturebox" title="<%= images[0].title %>">
            <img class="featured" src="<%= images[0].url %>" alt="#">
            <img class="featured2" src="<%= images[0].url %>" alt="#">
            <div class="textbox">
                <h4><%= images[0].title %></h4>
                <p><%= images[0].descr %></p>
            </div>
        </div>
        <div class="arrowbox">
            <img class="arrow reverse inactive" src="/arrow.svg" alt="#">
        </div>
    </div>
    <p class="mobile"><%= images[0].descr %></p>
    <div class="thumbnails">
        <% images.forEach((element, index) =>{
                let firstThumbnail = '';
                if (index===0) firstThumbnail = ' selected';%>
        <img class="thumbnail<%= firstThumbnail %>" src="<%= element.url %>" alt="#" title="<%= element.title %>"
            data-desc="<%= element.descr %>" data-id="<%= element.img_id %>">
        <% }) %>
    </div>
    <div class="buttons">
        <button class="add green">Add</button>
        <button class="update orange">Update</button>
        <button class="delete red">Delete</button>
        <button class="moveleft light">Move Left</button>
        <button class="save orange">Save</button>
        <button class="moveright light">Move Right</button>
        <form action="/" method="POST" class="hidden">
            <label>
                Title:
                <input type="text" name="title" maxlength="45" required>
            </label>
            <label>
                URL:
                <input type="url" name="url" maxlength="255" required>
            </label>
            <label>
                Description:
                <textarea name="descr" rows="10" cols="55" maxlength="300" required></textarea>
            </label>
            <input type="submit" class="submit green" value=Submit>
        </form>
    </div>
</body>
<script src='home.js'></script>

</html>